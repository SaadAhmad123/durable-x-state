{
  "name": "xorca",
  "version": "0.1.36",
  "description": "This is a scalable library for managing state in serverless applications, offering persistence and locking for xState actors.",
  "main": "dist/index.js",
  "license": "MIT",
  "keywords": [
    "xstate",
    "serverless",
    "orchestration",
    "durable",
    "state machine"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "dev": "ts-node ./src/index.ts",
    "test": "jest --passWithNoTests",
    "format": "npx prettier --write .",
    "build:doc": "typedoc src/index.ts --plugin @mxssfd/typedoc-theme  --plugin typedoc-plugin-mermaid --theme my-theme"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cloudevents": "8.0.0",
    "unified-serverless-storage": "0.1.3",
    "uuid": "9.0.1",
    "xorca-cloudevent-router": "^0.2.18",
    "xstate": "5.3.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@mxssfd/typedoc-theme": "^1.1.3",
    "@types/jest": "^29.5.3",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.8.7",
    "@types/uuid": "^9.0.7",
    "aws-sdk": "^2.1478.0",
    "dotenv": "^16.3.1",
    "jest": "^29.6.2",
    "prettier": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.7",
    "typedoc-plugin-mermaid": "^1.10.0",
    "typescript": "^5.2.2"
  }
}
